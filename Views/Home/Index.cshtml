@{
    ViewBag.Title = "Home Page";
    ViewBag.choice = "";
}
<link href="~/Content/bootstrap.css" rel="stylesheet" />
<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>

<h1>Upload Files</h1>
<h5>Select a radio button to upload any file type</h5>
<div class="container" style="background-color: #d7e8e8">
<div class="row">
    <div class="col-sm-12 col-md-6">
        <h3 style=" margin: 15px;"> Description</h3>
        <p>
            This system allows the user to upload media. The uploaded files will be saved to the "Media" folder according to the file type.
            The user can view the files after they have been uploaded by clicking the link for each file on the navigation bar.

            The "Files" link navigates to the Files page where the user will be provided with a table of all the  uploaded documents.
            
            The "Images" link navigates to the Images page where the user can view the uploaded Images.The user will also be given an option to download or delete
            each uploaded file.

        </p>
    </div>
    <div class="col-sm-12 col-md-6" style="float:right">
        <h4 style=" margin: 15px; "> Option Selection</h4><br />
        @*The enctype = ‘multipart/form-data’ attribute is used for uploading Files using HTML FileUpload element*@
        @using (Html.BeginForm("Index", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            //Radio Buttons
            <div>
                <label style="margin-right: 10px">Document  </label><input type="radio" name="optradio" value="Documents" /><br />
                <label style="margin-right: 10px">Image  </label><input type="radio" name="optradio" value="Images" /><br />
                <label style="margin-right: 10px">Video  </label><input type="radio" name="optradio" value="Videos" /><br /><br />

            </div>

            @Html.TextBox("file", "", new { type = "file" })@*upload button*@
            <input style="margin: 5px" type="submit" value="submit" />

        }
    </div>
    </div>


</div>
